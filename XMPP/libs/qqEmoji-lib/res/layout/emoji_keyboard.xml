<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dip"
    android:background="@drawable/emoji_ime_bg"
    android:orientation="vertical" >

    <com.way.ui.emoji.CustomViewPager
        android:id="@+id/parent_pager"
        android:layout_width="match_parent"
        android:layout_height="170dip"
        android:background="#fff0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal" >

        <com.way.ui.emoji.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            app:pstsIndicatorColor="@android:color/white"
            app:pstsIndicatorHeight="2dp"
            app:pstsShouldExpand="true"
            app:pstsTabPaddingLeftRight="2dp" />

        <ImageButton
            android:id="@+id/back_space"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:background="@drawable/background_tab"
            android:contentDescription="back_space"
            android:src="@drawable/sym_keyboard_delete_holo" />
    </LinearLayout>

</LinearLayout>