<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_nav"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/padding_ten" >

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/img_app_logo" />

    <Button
        android:id="@+id/app_download"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_button_blue"
        android:focusable="false"
        android:gravity="center"
        android:text="@string/app_down"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_ten"
        android:layout_marginRight="@dimen/padding_ten"
        android:layout_toLeftOf="@id/app_download"
        android:layout_toRightOf="@id/app_icon"
        android:text="@string/app_name"
        android:textSize="@dimen/font_normal" />

</RelativeLayout>