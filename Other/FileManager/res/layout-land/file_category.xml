<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        layout="@layout/category_grid" />

    <LinearLayout
        android:id="@+id/fourth_line"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#ededed"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/usage_info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_internal_path"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/fm_title_internal" />

                <TextView
                    android:id="@+id/tv_total1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />
                
                <TextView
                    android:id="@+id/tv_free1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/pb_stroge_info1"
                style="@style/StorageProgressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="12dip"
                android:background="@drawable/drawable_progress0"
                android:max="100"
                android:progress="0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Interval_space"
            android:layout_width="12dip"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/usage_info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_external_path"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/fm_title_external" />

                <TextView
                    android:id="@+id/tv_total2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tv_free2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/pb_stroge_info2"
                style="@style/StorageProgressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="12dip"
                android:background="@drawable/drawable_progress0"
                android:max="100"
                android:progress="0" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>